<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Captura de Pedido</title>
    <!-- Agrega enlaces a Bootstrap y otros recursos necesarios -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Captura de Pedido</h2>
        <form id="pedidoForm">
            <div class="form-group">
                <label for="nombreCompleto">Nombre Completo:</label>
                <input type="text" class="form-control" id="nombreCompleto" required>
            </div>

            <div class="form-group">
                <label for="medicamento">Medicamento:</label>
                <!-- Combo para seleccionar el Medicamento -->
                <select class="form-control" id="medicamento" required>
                    <!-- Opciones del combo se pueden cargar dinámicamente desde el backend -->
                    <option value="1">Medicamento 1</option>
                    <option value="2">Medicamento 2</option>
                    <!-- Agrega más opciones según sea necesario -->
                </select>
            </div>

            <div class="form-group">
                <label for="cantidad">Cantidad:</label>
                <input type="number" class="form-control" id="cantidad" required>
            </div>

            <div class="form-group">
                <label for="total">Total:</label>
                <input type="text" class="form-control" id="total" readonly>
            </div>

            <button type="button" class="btn btn-primary" id="calcularBtn">Calcular Total</button>
            <button type="button" class="btn btn-success" id="guardarBtn">Guardar Pedido</button>
        </form>
    </div>

    <!-- Script para calcular el total y guardar el pedido -->
    <script>
        // Espera a que el documento esté completamente cargado
        $(document).ready(function () {
            // Agrega eventos a los botones utilizando jQuery
            $("#calcularBtn").on("click", calcularTotal);
            $("#guardarBtn").on("click", guardarPedido);
        });

        function calcularTotal() {
            var cantidad = parseFloat($("#cantidad").val()) || 0;
            var precio = parseFloat($("#medicamento").val()) || 0;
            var total = cantidad * precio;
            $("#total").val(total.toFixed(2));
        }

        function guardarPedido() {
            // Aquí puedes implementar la lógica para enviar los datos al backend
            // Puedes utilizar fetch() u otras librerías para realizar la petición AJAX
            alert('Pedido guardado con éxito!');
            
            // Redirige a la vista GetAll DetallePedido después de guardar el pedido
            window.location.href = '/DetallePedido/GetAll';
        }
    </script>
</body>
</html>
