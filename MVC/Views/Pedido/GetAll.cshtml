@model ML.Pedido
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pedidos</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un Pedido + para agregar...</h5>
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("Agregar Pedido", "Form", "Pedido", htmlAttributes: new {@class = "btn btn-success"})   
</div>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>

            <td class="visually-hidden">IdPedido</td>
            <td>Cliente</td>


            <td>Eliminar</td>
        </tr>

    </thead>
    <tbody>


        @foreach (ML.Pedido pedido in Model.Pedidos)
        {
            <tr>
                <td><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Pedido", new { IdPedido = pedido.IdPedido })"></a></td>

                <td class="visually-hidden">@pedido.IdPedido</td>
                <td>@pedido.Cliente</td>

                
                <td>
                    <a class="btn btn-danger bi bi-trash2" href="@Url.Action("Delete", "Pedido", new {IdPedido = pedido.IdPedido })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');">   </a>
                </td>

            </tr>
        }

    </tbody>

</table>