@model ML.Pedido﻿
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Forulario</h2>
<div class="row">
    <div class="container">
        <div class="col-md-12">
            <h2>Pedido</h2>
            <h5>Ingrese los datos del Pedido:</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Pedido", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.HiddenFor(model => model.IdPedido)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Cliente)
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        @Html.TextBoxFor(model => model.Cliente, new { @class = "form-control", @id = "txtCliente"})
                    </div>

                </div>

                <div class="col-md-3">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Regresar", "GetAll", "Pedido", null, new { @class = "btn btn-danger" })
                </div>
            }
        </div>
    </div>
</div>